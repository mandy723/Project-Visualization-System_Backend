<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="pvs.app.controller.GithubApiController" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.service.ProjectService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.service.GithubApiService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.service.RepositoryService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.service.GithubCommitService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.dto.GithubCommitDTO" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.service.GithubIssueLoaderThread" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.service.SonarApiService" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="pvs.app.controller.SonarApiController" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>